<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="@drawable/inputfield"
    android:padding="8dp">

    <!-- Title & Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/transactionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/transactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Date -->
    <TextView
        android:id="@+id/transactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins"
        android:text="Date"
        android:textColor="@color/inputFieldHint"
        android:textSize="13sp" />

    <!-- Category & Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/transactionCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="Category"
            android:textColor="@color/inputFieldHint"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/transactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Type"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="4dp">

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:background="@color/navBarBackground"
            android:contentDescription="Edit transaction"
            app:srcCompat="@drawable/edit_note_26dp_3b82f6_fill0_wght400_grad0_opsz24" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:background="@color/navBarBackground"
            android:contentDescription="Delete transaction"
            app:srcCompat="@drawable/delete_26dp_ef4444_fill0_wght400_grad0_opsz24" />
    </LinearLayout>
</LinearLayout>
