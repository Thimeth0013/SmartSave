<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EditTransaction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Edit Transaction"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/transactionTypeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/incomeR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Income"
                    android:textColor="@color/green" />

                <RadioButton
                    android:id="@+id/expenseR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Expense"
                    android:textColor="@color/red" />

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/inputfield"
            android:ems="10"
            android:hint="What was this for?"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColorHint="@color/inputFieldHint" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Amount"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inputAmount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/inputfield"
            android:ems="10"
            android:hint="00.00"
            android:inputType="numberDecimal"
            android:paddingStart="15dp"
            android:textColorHint="@color/inputFieldHint" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inputDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/inputfield"
            android:contentDescription="Select transaction date"
            android:cursorVisible="false"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Select date"
            android:onClick="showDatePicker"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/inputFieldHint" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Category"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/inputCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/inputfield"
            android:contentDescription="@string/category_spinner_description"
            android:entries="@array/category_list"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="10dp"
            android:prompt="@string/category_prompt"
            android:textColor="@color/white"
            android:textColorHint="@color/inputFieldHint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="20dp"
            android:gravity="fill|fill_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="✖ Cancel"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="✔ Update"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="5dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>